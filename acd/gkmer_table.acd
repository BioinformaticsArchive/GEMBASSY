application: gkmer_table [
  documentation: "Create an image showing all k-mer abundance within a sequence"
  groups: "Display"
  embassy: "gembassy"
]

section: input [
  information: "Input section"
  type: "page"
]

  seqall: sequence [
    parameter: "Y"
    type: "nucleotide"
    features: "Y"
  ]

endsection: input

section: advanced [
  information: "Advanced section"
  type: "page"
]

  integer: k [
    information: "Length of oligomer"
    default: "6"
  ]

endsection: advanced

section: output [
	information: "Output section"
	type: "page"
]

  toggle: show [
    information: "Include to show png with X11 window"
    default: "N"
  ]

  string: goutfile [
    parameter: "Y"
    information: "Output filename"
    default: "gkmer_table.acd"
  ]

endsection: output
