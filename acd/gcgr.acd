application: gcgr [
  documentation: "Create a Chaos Game Representation of a given sequence"
  groups: "Display"
  embassy: "gembassy"
]

section: input [
  information: "Input section"
  type: "page"
]
  seqall: sequence [
    parameter: "Y"
    type: "nucleotide"
    features: "Y"
  ]

endsection: input

section: advanced [
  information: "Advanced section"
  type: "page"
]

  integer: width [
    information: "Width of image"
    default: "1024"
  ]

  integer: level [
    information: "Zoom level for Google Maps representation"
    default: "5"
  ]

  string: accid [
    information: "Include to use sequence accession ID as query"
    default: ""
  ]

endsection: advanced

section: output [
	information: "Output section"
	type: "page"
]

  toggle: show [
    information: "Include to show png with X11 window"
    default: "N"
  ]

  string: filename [
    standard: "@(!$(show))"
    default: "gcgr.png"
  ]

endsection: output
